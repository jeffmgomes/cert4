<Page
    x:Class="Assessment2.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assessment2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="LightGreen">
        <TextBlock Text="Welcome!" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <StackPanel VerticalAlignment="Center" Margin="100">
            <TextBox x:Name="txtUser" Header="Username:"/>
            <PasswordBox x:Name="txtPassword" Header="Password"/>
            <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click" HorizontalAlignment="Center" Margin="20" Width="150" Height="50"/>
        </StackPanel>
    </Grid>
</Page>
